<% layout("/layouts/adminBoilerplate") %>
<body>
    <div class="admin-container">
        <div class="admin-flex">
            <div class="admin-left">
                <div class="admin-left-flex">
                    <div class="admin-left-sub">
                        <img src="/images/add_icon.png" alt="">
                        <a href="/admin/add">Add items</a>
                    </div>
                    <div class="admin-left-sub">
                        <img src="/images/order_icon.png" alt="">
                        <a href="/admin/list">List items</a>
                    </div>
                    <div class="admin-left-sub">
                        <img src="/images/order_icon.png" alt="">
                        <a href="/admin/orders">Orders</a>
                    </div>
                </div>
            </div>
            <div class="admin-right">
                <div class="admin-right-container">
                    <h2>Create New Product</h2>
                    <br>
                    <hr>
                    <div class="product-form">
                        <form action="/admin/add" method="post" enctype="multipart/form-data">
                            <div class="form-file">
                                <h3>Product Image</h3>
                                <label for="productImage">Select File</label>
                                <input type="file" id="productImage" name="image">
                            </div>
                            <br>
                            <br>
                            <input type="text" placeholder="Product Name" class="pn" name="productname">
                            <br>
                            <input type="text" placeholder="Product Price" class="pp" name="price">
                            <input type="text" placeholder="Discount" class="pd" name="discount" value="0">
                            <div class="panel-details">
                                <h2>Panel Details</h2>
                                <input type="text" placeholder="Background Color" class="pp" name="bgcolor">
                                <input type="text" placeholder="Panel Color" class="pd" name="panelcolor">
                                <br>
                                <input type="text" placeholder="Text Color" class="pp" name="textcolor">
                            </div>
                            <button>Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>